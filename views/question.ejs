<%- include('partials/header') %>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1><%= pergunta.titulo%></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="post" action="/saveResponse">
            <h3 class="mb-3">Responder</h3>
            <textarea name="corpo" id="corpo" class="form-control mb-3" placeholder="Digite sua resposta"></textarea>
            <input type="hidden" name="perguntaId" value="<%=pergunta.id%>" >
            <button type="submit" class="btn btn-primary">Enviar resposta</button>
        </form>
        <hr>
        <h3>Respostas:</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <pre><%= resposta.corpo %></pre>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include('partials/footer') %>
